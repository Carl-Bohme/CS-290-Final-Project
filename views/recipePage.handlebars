{{> header}}

<main class="content">

    <div class = "recipe-ingredients-container">
              <h2>Ingredients</h2>
              <div class = "recipe-ingredients">
                <ul>
                  {{#each ingredients as |item i|}}
                        <li class="recipe-ingredient-content">{{this}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>

    <div class="recipe-container">
        <div class="recipe-title-container">
            <h1 class="recipe-title">{{name}}</h1>
            <div class="recipe-image-container">
              <img src="{{photoURL}}" alt="{{name}}">
            </div>
        </div>
        <div class="recipe-information-container">
            <!-- Dynamically allocate list -->
            <div class = "recipe-description-container">
              <h2>Description</h2>
              <span class="recipe-description">{{longDescription}}</span>
            </div>
            <div class="recipe-instructions-container">
              <h2>Instructions</h2>
              <div class="recipe-instructions">
                <ul>
                  {{#each instructions as |item i|}}
                        <li class="recipe-instruction-content">{{this}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
        </div>

        <div class = "recipe-comments-container">
          <h2>Comments</h2>
            <div class = "comment-post-container">

              <form method="post" action = "/addComment/{{id}}" class="comment-form">

                <input class="comment-input" name="commentInput" placeholder="Enter a comment!"></input>

                <div class="add-comment-button-container">
                  <input href="/{{id}}" id="create-comment" class="post-button" type="submit" value="Post" />
                </div>

              </form>

            </div>
            {{#each comments as |item i|}}
               <div class="comment">
                 <span class="comment-content">{{this}}</span>
               </div>
            {{/each}}
        </div>
    </div>

    <div class="recipe-detail-container">
              <h2>Details:</h2>
              <div class="recipe-time-container">
                <p class="recipe-time">Time: <b>{{time}}</b></p>
              </div>
              <div class="recipe-difficulty-container">
                <p class="recipe-difficulty">Difficulty: <b>{{difficulty}}</b></p>
              </div>
            </div>

</main>
