{{> header}}

<main class="content">

    <div class="add-recipe-body">

      <div class="add-recipe-title-container">
        <h1 class="add-recipe-title">Add Your Recipe</h1>
      </div>

      <form method="post" action="/addRecipeToFile">

        <div class="recipe-input-element">
            <label for="recipe-name-input">Name of Recipe:</label>
            <input type="text" name='recipeName' id="recipe-text-input" placeholder="Enter name of recipe here..." required></input>
        </div>

        <div class="recipe-input-element">
            <label for="recipe-short-description-input">Short Recipe Description:</label>
            <input type="text" name='recipeShortDescription' id="recipe-text-input" placeholder="Enter short despription here..." required></input>
        </div>

        <div class="recipe-input-element">
            <label for="recipe-long-description-input">Item description:</label>
            <input type="text" name='recipelongDescription' id="recipe-text-input" placeholder="Enter full description here..." required></input>
        </div>

        <div class="recipe-input-element">
            <label for="recipe-photoURL-input">Image URL:</label>
            <input type="text" name='recipePhotoURL' id="recipe-text-input" placeholder="Enter full description here..." required></input>
        </div>

        <div class="recipe-input-element">
            <label for="recipe-ingredients-input">Ingredients:</label>
            <input type="text" name='recipeIngredients' id="recipe-text-input" placeholder="Separate with a comma and a space ( eg. &quot;,  &quot;)" required></input>
        </div>

        <div class="recipe-input-element">
            <label for="recipe-instructions-input">Instructions:</label>
            <input type="text" name='recipeInstructions' id="recipe-text-input" placeholder="Separate with a comma and a space ( eg. &quot;,  &quot;)" required></input>
        </div>

        <div class="recipe-input-container">
          <fieldset id="recipe-time-field" class="recipe-fieldset">
            <legend>Difficulty</legend>
            <div>
              <input type="radio" name="recipeTime" id="recipe-time-short" value="Short" required>
              <label for="recipe-time-short">Short</label>
            </div>
            <div>
              <input type="radio" name="recipeTime" id="recipe-time-medium" value="Medium">
              <label for="recipe-time-medium">Medium</label>
            </div>
            <div>
              <input type="radio" name="recipeTime" id="recipe-time-long" value="Long">
              <label for="recipe-time-long">Long</label>
            </div>
          </fieldset>
        </div>

        <div class="recipe-input-container">
          <fieldset id="recipe-difficulty-field" class="recipe-fieldset">
            <legend>Length of Time</legend>
            <div>
              <input type="radio" name="recipeDifficulty" id="recipe-difficulty-easy" value="Easy" required>
              <label for="recipe-difficulty-easy">Easy</label>
            </div>
            <div>
              <input type="radio" name="recipeDifficulty" id="recipe-difficulty-medium" value="Moderate">
              <label for="recipe-difficulty-medium">Moderate</label>
            </div>
            <div>
              <input type="radio" name="recipeDifficulty" id="recipe-difficulty-hard" value="Hard">
              <label for="recipe-difficulty-hard">Hard</label>
            </div>
          </fieldset>
        </div>

        <div class="recipe-input-container">
          <fieldset id="recipe-diet" class="recipe-fieldset">
            <legend>Recipe Diet</legend>
            <div>
              <input type="checkbox" name="recipeDietVegan" id="recipe-diet-vegan" value="Vegan">
              <label for="recipe-difficulty-vegan">Vegan</label>
            </div>
            <div>
              <input type="checkbox" name="recipeDietVegetarian" id="recipe-diet-vegetarian" value="Vegetarian">
              <label for="recipe-diet-vegetarian">Vegetarian</label>
            </div>
          </fieldset>
        </div>

        <div class="add-recipe-button-container">
          <input id="create-recipe" class="add-recipe-button" type="submit" value="Post Recipe" />
        </div>

      </form>

    </div>

    
               

</main>