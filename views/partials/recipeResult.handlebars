<!-- Handlebars template for a single recipe result on the results page -->
<div class="recipeResult">
    <div id="result-short">
        <div class="results-image-container">
            <img src="{{photoURL}}" alt="{{short-descpription}}">
        </div>
        <div class="short-results-main-container">
            <a href="#"><span class="short-results-title">{{name}}</span></a><br>
            <div class="short-results-content">
                <span class="short-results-description">{{short-description}}</span>
                <div class="short-results-attributes">
                    <span class="short-results-time">Commitment: <b>{{time}}</b></span>
                    <span class="short-results-difficulty">Difficulty: <b>{{difficulty}}</b></span>
                    <span class="short-percent-match"><b>{{percent}}%</b> Match</span>
                </div>
            </div>
        </div>
    </div>
    <button type="button" id="expand-button">&#9660;</button>
    <div id="result-expanded" class="hidden">
        <div class="result-expanded-content">
            <div class="long-decription-container">
                <h3>Decription:</h3>
                <span class="long-results-description">{{long-description}}</span>
            </div>
            <div class="results-ingredients-container">
                <h3>Ingredients:</h3>
                <ul class="results-ingredients-list">
                    {{#each ingredients as |item i|}}
                        <li class="results-ingredient">{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <button type="button" id="minimize-button">&#9650;</button>
    </div>
</div>